{
    "compilerOptions": {
      "typeRoots": ["./@types", "./node_modules/@types"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    //   "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "*"
        ]
      }
    },
    "include": [
      "*"
    ],
    "files": ["./@types/module.d.ts"],
    
  }